# A sample Gemfile
source "https://rubygems.org"

ruby '2.0.0'

    gem 'sinatra' # our web framework
    gem 'data_mapper'
    gem 'dm-postgres-adapter'
    gem 'sass'
    gem 'guard'
    gem 'guard-cucumber'
    gem 'guard-rspec'
    gem 'terminal-notifier-guard'
    gem 'bcrypt-ruby'
    gem 'rack-flash3'
    gem 'sinatra-partial'

group :development, :test do
    gem 'shotgun' # for live code reloading
    gem 'rake'
    gem 'cucumber'
    gem 'cucumber-sinatra'
    gem 'rspec'
    gem 'capybara'
    gem 'launchy'
    gem 'datamapper'
    gem 'database_cleaner'
end
